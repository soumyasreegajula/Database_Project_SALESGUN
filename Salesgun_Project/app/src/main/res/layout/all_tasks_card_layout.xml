<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_tasks_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/TaskBrandImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/TaskAddImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/TaskBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/TaskBrandImage"
            android:layout_toLeftOf="@id/TaskAddImage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/TaskDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TaskBrandName"
            android:layout_toLeftOf="@id/TaskAddImage"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/TaskBrandImage"/>

        <TextView
            android:id="@+id/TaskId"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"/>

        <TextView
        android:id="@+id/AllTaskCredits"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TaskDescription"
        android:layout_toLeftOf="@id/TaskAddImage"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/TaskBrandImage"/>

        <TextView
            android:id="@+id/AllTaskAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TaskDescription"
            android:layout_toLeftOf="@id/TaskAddImage"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/TaskBrandImage"/>

        <TextView
            android:id="@+id/AllTaskQuantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TaskDescription"
            android:layout_toLeftOf="@id/TaskAddImage"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/TaskBrandImage"/>



    </RelativeLayout>



</android.support.v7.widget.CardView>